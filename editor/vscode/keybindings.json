[
    // NOTE: we can't use `:` for key mappings unfortunately
    // --------------------------------------------------------------------------------
    // TERMINAL PANE

    { // toggle termianl focus (1/2)
        "key": "cmd+;",
        "command": "workbench.action.terminal.focus",
        "when": "editorFocus"
    },
    { // toggle termianl focus (2/2)
        "key": "cmd+;",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },

    // { // focus problems
    //     "key": "cmd+k cmd+p",
    //     "command": "workbench.action.problems.focus"
    // },

    // size
    { // toggle terminal size
        "key": "cmd+shift+p",
        "command": "workbench.action.toggleMaximizedPanel"
    },

    // --------------------------------------------------------------------------------
    // VIM-ONLY

    // { // toggle comment
    //     "key": " /",
    //     "command": "editor.action.commentLine"
    // },

    {
      "key": "cmd+k",
      "when": "!sideBarFocus",
      "command": "workbench.action.focusSideBar"
    },
    {
      "key": "cmd+k",
      "when": "sideBarFocus",
      "command": "workbench.action.focusActiveEditorGroup"
    },


    // focus sidebar
    // --------------------------------------------------------------------------------
    // Navigation

    { // switch VSCode instance
        "key": "shift+cmd+w",
        "command": "workbench.action.quickSwitchWindow"
    },
    { // save withot formatting
        "key": "cmd+ctrl+s",
        "command": "workbench.action.files.saveWithoutFormatting"
    },
    { // switch VSCode instance
        "key": "shift+cmd+w",
        "command": "workbench.action.quickSwitchWindow"
    },
]